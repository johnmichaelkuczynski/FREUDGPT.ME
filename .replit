modules = ["python-3.11", "nodejs-20", "web"]
[agent]
expertMode = true
integrations = ["python_anthropic_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libev", "psmisc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "flask-app"

[[workflows.workflow]]
name = "flask-app"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33579
externalPort = 3002

[[ports]]
localPort = 39283
externalPort = 4200

[[ports]]
localPort = 39363
externalPort = 3000

[[ports]]
localPort = 44879
externalPort = 3003

[[ports]]
localPort = 45369
externalPort = 3001

[deployment]
deploymentTarget = "vm"
run = ["sh", "-c", "gunicorn --worker-class gevent --workers 1 --bind 0.0.0.0:5000 --timeout 300 --keep-alive 30 --reuse-port app:app"]
